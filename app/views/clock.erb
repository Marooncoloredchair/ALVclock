<!DOCTYPE html>
<html>
	<head>
		<title>FHS Clock</title>
		<link href="/css/stylesheet.css" rel="stylesheet" />
	</head>
	<body>
		<div id="contain">
			<div id="marquee">
				<marquee>
					<% @marquees.each do |@marquee| %>
					&nbsp;&mdash;&nbsp;<%= @marquee.string %>&nbsp;&mdash;&nbsp;
					<% end %>
				</marquee><!-- AH! THE INVALIDITY! -->
			</div>
			<div id="schedule">
				<% @periods.each do |@period| %>
				<div class="period <%= @period.id %>"><%= @period.string %>: <%= @period.start_time.strftime("%I:%M") %>&ndash;<%= @period.end_time.strftime("%I:%M") %></div>
				<% end %>
			</div>
			<div id="clock">
				<p><%= Clock.time.strftime("%A, %B %d, %Y") %></p>
				<p><span id="time"></span></p>
			</div>
		</div>
		<script src="/jsc/jquery.js"></script>
		<script src="/jsc/jclock.js"></script>
		<script src="/jsc/application.js"></script>
	</body>
</html>
