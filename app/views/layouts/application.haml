%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "initial-scale=1", :name => "viewport"}

    %meta{:content => "The Farmington High School clock.", :name => "description"}
    %meta{:content => "Ethan Turkeltaub", :name => "author"}

    %title Clock &mdash; Administration

    %link{:href => "/favicon.ico", :rel => "icon"}
    %link{:href => "/img/apple-touch-icon.png", :rel => "apple-touch-icon-precomposed"}

    %link{:href => "/humans.txt", :rel => "author", :type => "text/plain"}
    %link{:href => "/css/application.css", :rel => "stylesheet"}

    %script{:src => "//use.typekit.net/zkf1hyd.js", :type => "text/javascript"}
    :javascript
      try{Typekit.load();}catch(e){}
  %body
    #contain
      %header
        %hgroup.top
          %section
            %aside
              %h1
                %a{:href => url(:index)} Clock
            %nav.right
              %ul
                - if authenticated?
                  %li
                    = form_tag url(:refreshes, :create), :method => "post" do
                      = hidden_field_tag :"redirect", :value => request.path
                      %button{:type => "submit"} Refresh
                %li
                  %a{:href => url(:clock, :index)} View Clock &rarr;
        - if authenticated?
          %hgroup.bottom
            %section
              %nav.left
                %ul
                  %li
                    %a{:href => url(:themes, :index)} Themes
                  %li
                    %a{:href => url(:schedules, :index)} Schedules
                  %li
                    %a{:href => url(:marquees, :index)} Marquee
                  %li
                    %a{:href => url(:notices, :index)} Notices
              %nav.right
                %ul
                  %li
                    %a{:href => url(:sessions, :destroy)} Sign Out &rarr;

      #main{:role => "main"}
        = yield

      %footer
        %section
          %p= safe("<a href=\"http://ethnt.me\">Ethan Turkeltaub</a> and FHS Audio-Visual fecit 1997&ndash;#{Time.now.year}.")
          %ul
            %li
              %a{:href => "http://github.com/fhsclock/clock"} GitHub
            %li
              %a{:href => "http://github.com/fhsclock/clock/issues"} Issues
            %li
              %a{:href => "http://#{request.host}:4567"} CIJoe
          %p.version= "#{CLOCK_VERSION}"
          %p
            %a{:href => "http://github.com/fhsclock/clock/commit/#{COMMIT}"}= COMMIT

