!!!5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}
    
    %meta{:content => "The clock.", :name => "description"}
    %meta{:content => "Ethan Turkeltaub", :name => "author"}
    
    %title Clock
    
    %link{:href => "/humans.txt", :rel => "author", :type => "text/plain"}
    %link{:href => "/css/clock.css", :rel => "stylesheet"}
  %body
    #contain

      %header#marquee
        %ul
          - @marquees.each do |m|
            %li= m.text  

      #main{:role => "main"}
        - if @schedule
          - if @schedule.periods
            %section#periods
              %ol
                - @schedule.periods.each do |p|
                  %li= "#{p.text}: #{time(p.start)} &ndash; #{time(p.finish)}"

        %aside#clock
          %p.date Tuesday, August 2nd, 2012
          %p.time 4:22

    %script{:src => "/jsc/lib/jquery.js"}
    %script{:src => "/jsc/lib/jquery.marquee.js"}
    %script{:src => "/jsc/clock.js"}