%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "UTF-8"}
      %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        %title
          FHS Clock &mdash; Administration
        %meta{:content => "The FHS Clock control panel.", :name => "description"}
        %meta{:content => "", :name => "author"}
        %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
        %link{:href => "/img/favicon.ico", :rel => "shortcut icon"}
        %link{:href => "/img/apple-touch-icon.png", :rel => "apple-touch-icon"}
        %link{:href => "/css/gyaku.css", :rel => "stylesheet"}
        %link{:href => "/css/login.css", :rel => "stylesheet"}
  %body
    #contain
      #main{:role => "main"}
        %h2 Login
        =flash_tag :error
        %form{:action => url(:authenticate), :method => "post"}
          %p
            %input{:name => "password", :placeholder => "Password", :type => "password"}/
            %button{:type => "submit"} Login
        
        %p#v Version #{CLOCK_VERSION}
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"}
    %script{:src => "/jsc/gyaku.js"}
