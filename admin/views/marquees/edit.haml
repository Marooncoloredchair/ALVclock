#inner.row
  = partial 'partials/nav/marquees'
  %section#body
    %section.row
      =flash_tag :error
      =flash_tag :notice
      %form.row{:action => url(:marquees, :modify), :method => "post"}
        %section
          %p
            %input{:name => "marquee[text]", :type => "text", :value => @marquee.text}/
          %p
            %input{:name => "id", :type => "hidden", :value => @marquee.id}/
            %input{:name => "_method", :type => "hidden", :value => "put"}/
            %button.green{:type => "submit", :value => "Publish"} Publish
