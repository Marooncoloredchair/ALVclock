/ [if (gt IE 9)|!(IE)]><!
%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "UTF-8"}
      %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        %title
          FHS Clock &mdash; Administration
        %meta{:content => "The FHS Clock control panel.", :name => "description"}
        %meta{:content => "", :name => "author"}
        %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
        %link{:href => "/img/favicon.ico", :rel => "shortcut icon"}
        %link{:href => "/img/apple-touch-icon.png", :rel => "apple-touch-icon"}
        %link{:href => "/css/admin.css", :rel => "stylesheet"}
  %body
    #contain
      %header
        .black
          %hgroup.row
            %h1.sixcol
              %a{:href => url(:index)} FHS Clock
            %p.right.last
              %a{:href => Clock.url(:index)}
                View Clock &rarr;
        .white
          %nav.row
            %ul
              %li
                %a{:href => url(:index)} Home
              %li
                %a{:href => url(:wallpapers, :index)} Wallpapers
              %li
                %a{:href => url(:schedules, :index)} Schedules
              %li
                %a{:href => url(:marquees, :index)} Marquees
              %li
                %a{:href => url(:notices, :index)} Notices
      #main{:role => "main"}
        #inner.row
          =yield
      %footer.row
        %p The FHS Clock is awesome
        %p Version #{CLOCK_VERSION}
        %p
          %form{:action => url(:logout), :method => "post"}
            %button{:type => "submit"} Logout
